{
  "name": "basic-react-ts",
  "private": true,
  "version": "1.0.0",
  "main": "index.html",
  "author": "https://twitter.com/Fortel91",
  "description": "A simple starter to get up and running with React, TypeScript, Tailwind and Vite",
  "type": "module",
  "scripts": {
    "vite": "vite",
    "dev": "npm-run-all --parallel watch:tsc vite server:dev",
    "build": "tsc --noEmit && vite build && npm run prisma:generate && npm run server:build",
    "preview": "vite preview",
    "watch:tsc": "tsc --noEmit --watch",
    "lint": "eslint ./src/**/*.{ts,tsx} ./server/**/*.{ts,tsx}",
    "lint:fix": "eslint ./src/**/*.{ts,tsx} ./server/**/*.{ts,tsx} --fix",
    "docs": "typedoc",
    "watch:docs": "typedoc --watch",
    "server:dev": "tsx --watch server/server.ts",
    "server:build": "tsc -p tsconfig.server.json",
    "start": "node dist/server/server.js",
    "prisma:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "prisma:migrate:reset": "dotenv -e .env.local -- prisma migrate reset",
    "prisma:generate": "dotenv -e .env.local -- prisma generate",
    "prisma:studio": "dotenv -e .env.local -- prisma studio",
    "prisma:push": "dotenv -e .env.local -- prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@tsparticles/engine": "^3.8.1",
    "@tsparticles/plugin-polygon-mask": "^3.8.1",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.8.1",
    "argon2": "^0.43.0",
    "clarifai-nodejs-grpc": "^11.5.5",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-parallax-tilt": "^1.7.294"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.4",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-legacy": "^6.1.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "browser-sync": "^3.0.4",
    "daisyui": "^5.0.35",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-compiler": "^19.1.0-rc.1",
    "eslint-plugin-react-dom": "^1.48.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-react-x": "^1.48.5",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.9.0",
    "tailwindcss": "^4.1.4",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.3",
    "vite-plugin-browser-sync": "^4.0.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "typedocOptions": {
    "entryPoints": [
      "src/main.tsx",
      "src/utils/index.ts"
    ],
    "out": "docs",
    "tsconfig": "tsconfig.json",
    "includeVersion": true,
    "readme": "README.md"
  },
  "browserslist": [
    "defaults"
  ]
}
